generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Installation {
  id       Int     @default(autoincrement()) @id
  name     String  @db.Text                  @unique
  location String  @db.VarChar(100)

  /// Rename table to installations to conform to
  /// SQL naming conventions
  @@map("installations")
}

model Command {
  id       Int     @default(autoincrement()) @id
  name     String  @db.Text                  @unique
  abbrev   String  @db.VarChar(50)           @unique
  function String  @db.Text

  /// Rename table to installations to conform to
  /// SQL naming conventions
  @@map("commands")
}