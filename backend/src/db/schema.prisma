generator client {
  provider = "prisma-client-js"
}

generator docs {
  provider = "node node_modules/prisma-docs-generator"
  output   = "../../../docs/db"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Installation {
  id       Int    @id @default(autoincrement())
  name     String @unique
  location String @db.VarChar(100)

  /// Rename table to installations to conform to
  /// SQL naming conventions
  @@map("installations")
}

model Command {
  id       Int     @id @default(autoincrement())
  name     String  @unique
  abbrev   String  @unique @db.VarChar(50)
  function String
  deltas   Delta[]

  /// Rename table to commands to conform to
  /// SQL naming conventions
  @@map("commands")
}

model Delta {
  id       Int    @id @default(autoincrement())
  name     String @unique
  abbrev   String @unique @db.VarChar(50)
  function String

  Command   Command? @relation(fields: [commandId], references: [id])
  /// Rename key to command_id (seems to be convention for naming foreign keys)
  commandId Int?     @map("command_id")

  /// Rename table to deltas to conform to
  /// SQL naming conventions
  @@map("deltas")
}
