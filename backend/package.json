{
	"name": "voyager-backend",
	"version": "0.1.0",
	"description": "",
	"main": "index.js",
	"type": "module",
	"config": {
		"db": "DATABASE_URL=$(node scripts/db.js)"
	},
	"scripts": {
		"db:addMigration": "eval $npm_package_config_db prisma migrate dev --schema src/db/schema.prisma --name",
		"db:seed": "eval $npm_package_config_db prisma db seed",
		"db:testMigration": "eval $npm_package_config_db prisma db push --schema src/db/schema.prisma",
		"db:reset": "eval $npm_package_config_db prisma migrate reset --schema src/db/schema.prisma",
		"db:view": "eval $npm_package_config_db prisma studio --schema src/db/schema.prisma",
		"db:introspect": "eval $npm_package_config_db prisma db pull --schema src/db/schema.prisma",
		"dev": "eval $npm_package_config_db nodemon --experimental-specifier-resolution=node src",
		"lint": "npx eslint src",
		"lint:fix": "npm run lint -- --fix",
		"prettier": "npx prettier src --check",
		"prettier:fix": "npm run prettier -- --write",
		"format": "npm run prettier:fix && npm run lint:fix",
		"start": "node --experimental-specifier-resolution=node src",
		"test": "NODE_ENV=test node --experimental-vm-modules --experimental-specifier-resolution=node node_modules/jest/bin/jest.js"
	},
	"prisma": {
		"seed": "node src/db/seeds/index.js"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@prisma/client": "3.12.0",
		"cors": "^2.8.5",
		"express": "^4.17.3",
		"nodemon": "^2.0.15"
	},
	"devDependencies": {
		"eslint": "^8.13.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-prettier": "^4.0.0",
		"jest": "^27.5.1",
		"prettier": "^2.6.2",
		"prisma": "3.12.0",
		"prisma-docs-generator": "^0.5.0",
		"supertest": "^6.2.2"
	},
	"eslintConfig": {
		"env": {
			"es2021": true,
			"node": true,
			"jest": true
		},
		"extends": [
			"airbnb-base",
			"plugin:prettier/recommended"
		],
		"parserOptions": {
			"ecmaVersion": "latest",
			"sourceType": "module"
		},
		"plugins": [
			"prettier"
		],
		"rules": {
			"indent": [
				2,
				"tab",
				{
					"SwitchCase": 1,
					"VariableDeclarator": "first"
				}
			],
			"prettier/prettier": [
				"error"
			],
			"radix": [
				"error",
				"as-needed"
			],
			"no-console": 0,
			"no-tabs": [
				0,
				"error",
				{
					"allowIndentationTabs": true
				}
			],
			"no-unused-vars": [
				"error",
				{
					"args": "none"
				}
			]
		},
		"ignorePatterns": [
			"node_modules",
			"build",
			"dist",
			"public"
		]
	},
	"prettier": {
		"arrowParens": "avoid",
		"bracketSpacing": true,
		"bracketSameLine": false,
		"semi": true,
		"singleQuote": false,
		"trailingComma": "none",
		"endOfLine": "lf",
		"useTabs": true,
		"tabWidth": 4
	}
}
